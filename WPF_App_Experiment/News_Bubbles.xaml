<UserControl x:Class="WPF_App_Experiment.News_Bubbles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_App_Experiment"
             mc:Ignorable="d" Width="615" Height="180">
    <Grid Margin="10,10,10,15">
        <Rectangle Fill="SkyBlue" Margin="15,17" Stroke="Black" RadiusY="10" RadiusX="10"/>
        <TextBlock x:Name="Heading_Box" Margin="31,50,35,85" TextWrapping="Wrap" Text="TextBlock" FontWeight="Bold" Foreground="Black"/>
        <TextBlock x:Name="Content_Box" Margin="31,81,35,33" TextWrapping="Wrap" Text="TextBlock" Foreground="Black"/>
        <TextBlock x:Name="Timestamp_Box" Margin="31,25,40,115" TextWrapping="Wrap" Text="TextBlock" FontWeight="Bold" TextAlignment="Right" Foreground="Black"/>
    </Grid>
</UserControl>
